  "license": "ISC",
  "devDependencies": {
    "@cucumber/cucumber": "^12.4.0",
    "@cucumber/pretty-formatter": "^2.4.1",
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.1",
    "chalk": "^5.6.2",
    "dotenv": "^17.2.3",
    "playwright-bdd": "^8.4.2",
    "ts-node": "^10.9.2"
  },
  "dependencies": {
    "typescript": "^5.9.3"
  }
}
