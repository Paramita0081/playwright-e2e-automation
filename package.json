{
  "name": "live",
  "version": "1.0.0",
  "description": "Playwright with MCP Server",
  "main": "index.js",
  "scripts": {
    "test": "cucumber-js --config config/cucumber.js",
    "start": "node index.js",
    "demo": "npx playwright test tests/demo/mytest.spec.ts --headed",
